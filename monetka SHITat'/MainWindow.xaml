<Window x:Class="monetka_SHITat_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:monetka_SHITat_"
        mc:Ignorable="d"
        Title="Сумма купюр" Height="350" Width="300">
    <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10">
        <Label Content="Введите номинал купюры" DockPanel.Dock="Top"/>
        <TextBox x:Name="NominalKypyr" DockPanel.Dock="Top"/>
        <Label Content="Введите кол-во купюр" DockPanel.Dock="Top"/>
        <TextBox x:Name="KolvoKypyr" DockPanel.Dock="Top"/>
        <Button Content="Сумма купюр" DockPanel.Dock="Top" Click="Button_Click"/>
        <TextBlock x:Name="Result" DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
